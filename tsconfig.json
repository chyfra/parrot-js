{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true
  },
  "paths": {
    "@src/*": ["./src/*"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "matchby.js", "matchby.sample.js"]
}
